.footer
    background-color rgb($rgb-compl-deep)
    color $color-footer-font
    font-family Helvetica, Arial, sans-serif
    font-size 14px

    &__feedback .link
        text-decoration none
        font-weight bold

        &,
        &:link,
        &:visited
            color $color-footer-font

    &__copyright
        text-align right
        color rgb($rgb-compl-bright)

    &__title
        font-size 22px
        font-family 'Scada', sans-serif
        font-weight bold
        line-height 25px
        -webkit-font-smoothing antialiased

    &__text
        font-size 16px
        line-height 24px
        -webkit-font-smoothing antialiased
