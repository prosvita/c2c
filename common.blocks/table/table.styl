$sizes = {
    s: 4px,
    m: 6px,
    l: 8px,
    xl: 12px,
    xxl: 18px
}

$root = '.table'

{$root}
    border-collapse collapse

    &__cell
        padding 2px 0
        text-align left
        border 1px dotted rgb($rgb-pri-deep)

        &_align
            &_left
                text-align left
            &_center
                text-align center
            &_right
                text-align right

        & + &
            padding-left 8px

        th&
            text-align center
            border-top none

        tr:last-child td&
            border-bottom none

        //FIXIT: Зробити це у шаблоні, + відцентрувати контент
        td&:empty:before
            content '—'

for gap in $sizes
    {$root}_gap_{gap} {$root}__cell
        padding: $sizes[gap]

        &:first-child
            padding-left 0
            border-left none

        &:last-child
            padding-right 0
            border-right none

for gap in $sizes
    {$root}_gap-x_{gap} {$root}__cell
        padding-right: $sizes[gap]
        padding-left: $sizes[gap]

        &:first-child
            padding-left 0

        &:last-child
            padding-right 0

for gap in $sizes
    {$root}_gap-y_{gap} {$root}__cell
        padding-top: $sizes[gap]
        padding-bottom: $sizes[gap]
